<mvc:View controllerName="guiaquefunciona.controller.Main" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m"
          xmlns:vk="sap.ui.vk" xmlns:vbm="sap.ui.vbm">
  <App id="idAppControl">
    <pages>
      <Page title="Guia que funciona">
        <content>
          <vk:MapContainer autoAdjustHeight="true">
            <vk:listPanelStack>
              <vk:ListPanelStack width="230px">
                <vk:content>
                  <vk:ListPanel headerText="Legend" headerIcon="sap-icon://legend" expanded="true"
                                selectionMode="SingleSelectMaster">
                    <vk:items>
                      <GroupHeaderListItem title="Transport" upperCase="false"/>
                      <vk:LegendItem title="Truck" icon="sap-icon://shipping-status"/>
                    </vk:items>
                  </vk:ListPanel>
                </vk:content>
              </vk:ListPanelStack>
            </vk:listPanelStack>
            <vk:content>
              <vk:ContainerContent title="Mapa" icon="sap-icon://map-2">
                <vk:content>
                  <!--
                  nome
                  endereco, numero, complemento
                  telefones
                  bairro, cep, cidade, uf
                  tipoAtendimento
                  especialidades
                  -->
                  <vbm:GeoMap id="map">
                    <vbm:vos>
                      <vbm:Spots items="{/}">
                        <vbm:items>
                          <vbm:Spot position="{pos}" tooltip="{tooltip}" text="{text}"/>
                        </vbm:items>
                      </vbm:Spots>
                    </vbm:vos>
                  </vbm:GeoMap>
                </vk:content>
              </vk:ContainerContent>
            </vk:content>
          </vk:MapContainer>
        </content>
      </Page>
    </pages>
  </App>
</mvc:View>